# Environment Variables for Vocab Smart Backend
# Copy this file to .env and fill in the values

# Application Settings
APP_NAME=Vocab Smart Backend
APP_VERSION=1.0.0
DEBUG=false

# CORS Settings (comma-separated origins for production)
# For development: ALLOWED_ORIGINS=http://localhost:5173
# For production on Render: ALLOWED_ORIGINS=https://your-frontend-app.onrender.com
ALLOWED_ORIGINS=http://localhost:5173,https://your-frontend-app.onrender.com

# API Settings
API_PREFIX=/api

# Port (Render will set PORT automatically)
PORT=8000
